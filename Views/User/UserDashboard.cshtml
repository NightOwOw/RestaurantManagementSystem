@{
    ViewData["Title"] = "User Dashboard";
    ViewBag.Role = "user";
}

<div class="container mt-5">
    <div class="text-center mb-5 p-4 bg-white rounded shadow">
        <h1 class="display-4 mb-3">Welcome to Your Dashboard</h1>
        <p class="lead text-muted">Easily manage your reservations, track your orders, and enjoy a seamless dining experience. Your personalized dashboard is here to assist you every step of the way.</p>
    </div>

    <div class="row g-4">
        <!-- Reservations -->
        <div class="col-md-6">
            <div class="card h-100 shadow border-0 hover-card">
                <div class="card-body text-center p-5">
                    <i class="bi bi-calendar-check text-primary display-4 mb-3"></i>
                    <h5 class="card-title h4">My Reservations</h5>
                    <p class="card-text text-muted mb-4">Create new reservations and track their status as they await confirmation from the admin.</p>
                    <a asp-controller="User" asp-action="Reservations" class="btn btn-primary">View My Reservations</a>
                </div>
            </div>
        </div>

        <!-- Orders -->
        <div class="col-md-6">
            <div class="card h-100 shadow border-0 hover-card">
                <div class="card-body text-center p-5">
                    <i class="bi bi-cart-check text-success display-4 mb-3"></i>
                    <h5 class="card-title h4">My Orders</h5>
                    <p class="card-text text-muted mb-4">Check the status of your past and current orders.</p>
                    <a asp-controller="User" asp-action="Orders" class="btn btn-success">View My Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
    }
</style>